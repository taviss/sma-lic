<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_details"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_object_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-5dp"
        android:text="Test"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/list_item_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_item_object_name"
        android:text="01/01/2017"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@android:color/secondary_text_light" />

    <ImageView
        android:id="@+id/list_item_object_view"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignBaseline="@id/list_item_created_at"
        android:layout_alignBottom="@id/list_item_created_at"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/list_item_object_name"
        android:layout_marginBottom="40dp"
        android:paddingBottom="40dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnFindObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_item_object_view"
        android:text="Locate" />

    <Button
        android:id="@+id/btnDeleteObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFindObject"
        android:text="Delete" />

</RelativeLayout>