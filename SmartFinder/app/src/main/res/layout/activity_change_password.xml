<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sma.smartfinder.ChangePasswordActivity">


    <EditText
        android:id="@+id/old_password_ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Old password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/new_password_ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/new_password_repeat_ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New password repeat"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/change_pass_but_ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change password" />
</LinearLayout>
